#!/usr/bin/make -f

export PYBUILD_NAME=electrum-sibcoin

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installchangelogs::
	dh_installchangelogs -k RELEASE-NOTES

override_dh_auto_install::
	dh_auto_install
	mkdir -p debian/electrum-sibcoin/usr/bin \
             debian/electrum-sibcoin/usr/share
	cp -r debian/python3-electrum-sibcoin/usr/bin \
       debian/electrum-sibcoin/usr
	cp -r debian/python3-electrum-sibcoin/usr/share/applications \
       debian/electrum-sibcoin/usr/share
	cp -r debian/python3-electrum-sibcoin/usr/share/pixmaps \
       debian/electrum-sibcoin/usr/share
	mkdir -p debian/sibcoin-electrum/usr/bin \
             debian/sibcoin-electrum/usr/share
	mv debian/python3-electrum-sibcoin/usr/bin \
       debian/sibcoin-electrum/usr
	mv debian/python3-electrum-sibcoin/usr/share/applications \
       debian/sibcoin-electrum/usr/share
	mv debian/python3-electrum-sibcoin/usr/share/pixmaps \
       debian/sibcoin-electrum/usr/share
